@model IEnumerable<BHX_2.Models.Product>

@{
    ViewBag.Title = "Myorder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    int sum = 0;
} 
<link rel = "stylesheet" href = "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" > 
<script src = "https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js" > </script>   
<script src = "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" > </script>   
<div>
<table class="table table-bordered">
    <tr class="head">
        <th>
            Name
        </th>
        <th>
            ProductGroup
        </th>
        <th>
            Price
        </th>
        <th>
            Status
        </th>
        <th>
            Description
        </th>
        <th>
            Image
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="sp">
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductGroup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @*<div id="a">
                        @item.Description.Replace("\n", "<br />").Replace("\r\n", "<br />")
                    </div>*@
                @Html.DisplayFor(modelItem => item.Description)

            </td>
            <td>
                <img src="/@item.UrlImage" width="100" height="100" />
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ProductID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ProductID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ProductID })
            </td>
             <td>
        <button id = "btn_delete" class = "label label-primary" data - slno = "@item.ProductID"  
                onclick ="location.href='@Url.Action("Remove ","AddToCart ",item)'" > 
            <img src = "~/Icons/delete.png" height = "30"width = "30" /> </button>   </td>   </tr>
    }


    @foreach (var x in Model)
    {
        sum = Convert.ToInt32(x.Price) + sum;
    } 
    <tfoot> <tr> <td> </td>   <td> </td>   <td> <b> Total </b></td > <td> ₹@sum </td>   </tr>   </tfoot>   </table>   
<div id = "footer"> <img src = "~/Templates/Footer.jpg" width=100%  height=60px /> 
    </div>   
<button type = "button" id = "btnPrint" class = "btn btn-primary"> Print </button>   
<button type = "button" class = "btn btn-success" > Continue Shopping </button>  
 <button type = "button" class = "btn btn-warning" > Place Order </button>   </div> 