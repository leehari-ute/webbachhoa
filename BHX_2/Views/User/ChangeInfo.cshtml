
@{
    ViewBag.Title = "ChangeInfo";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<link href="~/Content/Mine/changeInf.css" rel="stylesheet" />

<form class="form-login" action="ChangeInfo" method="post">
    <div class="loginbox">
        <h2>
            Đổi thông tin
        </h2>
        <div>
            <div class="div-title">
                <ul>
                    <li>Tên:</li>
                    <li><input class="input1_1" type="text" name="name" placeholder="Nguyễn Văn B" /></li>
                </ul>
                
            </div>

            <div class="div-title">
                <ul>
                    <li>Ngày sinh:</li>
                    <li><input class="input1_2" type="date" name="birthday" placeholder="28/02/2000" /></li>
                </ul>
                
            </div>
           
            <div class="div-title">
                <ul>
                    <li>Số điện thoại:</li>
                    <li><input class="input1_3" type="tel" name="phone" placeholder="0909090909" /></li>
                </ul>
                
            </div>
            
            <div class="div-title">
                <ul>
                    <li>Email:</li>
                    <li><input class="input1_4" type="email" name="email" placeholder="pinkystore@gmail.com" /></li>
                </ul>
                
            </div>

            <div class="div-title">
                <ul>
                    <li>Địa chỉ:</li>
                    <li><input class="input1_5" type="text" name="address" placeholder="Phường Linh Trung Quận Thủ Đức TPHCM" /></li>
                </ul>
                
            </div>

            <div class="div-title">
                <ul>
                    <li>Xác nhận mật khẩu:</li>
                    <li><input class="input1_6" type="password" name="pass" placeholder="Xác nhận mật khẩu" required /></li>
                </ul>
                
            </div>
           
            <input class="input-button" type="submit" name="ChangeInfo" value="Cập nhật" />
        </div>
    </div>
</form>

