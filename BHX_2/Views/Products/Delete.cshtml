@model BHX_2.Models.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<h3 style="font-size: 20px;margin-left: 5%;">Xác nhận xóa sản phẩm?</h3>
<div class="around">
    <h4> Delete Product</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProductGroup)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductGroup)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Amount)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Amount)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd id="des">
            @Model.Description.Replace("\n", "<br />").Replace("\r\n", "<br />")
            <script>
                function myFunction() {
                    var x = document.getElementById("des").innerText;
                    document.getElementById("des").innerHTML = x;
                }
                myFunction();
            </script>
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd style="height: 96px;">
            <img src="/@Model.UrlImage" width="100" height="100" />
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="margin-left:5%">
            <input type="submit" value="Delete" class="btn btn-default" style="color: white;background: #9a00ff;border-radius: 10px;padding: 5px;"> |
            <a style="color: white;text-decoration: none;border-radius: 24px;border: 1px solid black;padding: 5px;background: #9a00ff;" href="/Products/GetPaging">Back to List</a>
        </div>
    }
</div>

