@model BHX_2.Models.Product
@using BHX_2.Models
@using System.Linq
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Product</h4>
    <hr />
    <dl>
        <dt>
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProductGroup)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductGroup)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Amount)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Amount)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        
        <dd id="des">
            @Model.Description.Replace("\n", "<br />").Replace("\r\n", "<br />")            
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd>
            <img src="/@Model.UrlImage" width="100" height="100" />
        </dd>
    </dl>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ProductID }) |
    @Html.ActionLink("Back to List", "GetPaging")
</p>

<script>
    function myFunction() {
        var x = document.getElementById("des").innerText;
        document.getElementById("des").innerHTML = x;
    }
    myFunction();
</script>


